@model UserInfo
@{
    ViewBag.Title = "Meeting Summary";
}

<main class="text-center">
    <h1 class="h4">Meeting Summary</h1>

    @if (Model.WillAttend == true)
    {
        <p>Thank you for attending the meeting, @Model.Name. Number of participants: @ViewBag.UserCount</p>
        <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="List">List Participants</a>
    }
    else
    {
        <p>Sorry you couldn't make it, @Model.Name.</p>
        <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Meeting Attendance Form</a>
    }
   
</main>
   